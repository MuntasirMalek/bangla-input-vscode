{
  "name": "bangla-input",
  "displayName": "Bangla Input - বাংলা ইনপুট",
  "description": "Fast Banglish to Bengali transliteration with Google API suggestions and manual mode",
  "version": "2.5.0",
  "publisher": "utsho",
  "author": {
    "name": "Utsho"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MuntasirMalek/bangla-input-vscode"
  },
  "bugs": {
    "url": "https://github.com/MuntasirMalek/bangla-input-vscode/issues"
  },
  "homepage": "https://github.com/MuntasirMalek/bangla-input-vscode#readme",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Keymaps"
  ],
  "keywords": [
    "bengali",
    "bangla",
    "banglish",
    "transliteration",
    "phonetic",
    "input",
    "বাংলা",
    "avro"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "banglaInput.toggle",
        "title": "Bangla Input: Toggle ON/OFF"
      },
      {
        "command": "banglaInput.toggleManualMode",
        "title": "Bangla Input: Toggle Manual Mode (No Auto-correct)"
      },
      {
        "command": "banglaInput.convert",
        "title": "Bangla Input: Show Suggestions"
      }
    ],
    "keybindings": [
      {
        "command": "banglaInput.toggle",
        "key": "alt+g",
        "mac": "alt+g"
      },
      {
        "command": "banglaInput.toggleManualMode",
        "key": "alt+shift+g",
        "mac": "alt+shift+g"
      },
      {
        "command": "banglaInput.convert",
        "key": "ctrl+shift+g",
        "mac": "cmd+g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "package": "vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  },
  "dependencies": {}
}